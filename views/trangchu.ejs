<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<title>Socket IO</title>
	<link rel="stylesheet" href="">
	<script src="jquery-3.2.1.min.js"></script>
	<script src="socket.io/socket.io.js"></script>
	<script>
	var socket = io("http://localhost:3000")
	socket.on("SeverSendColor", function(data){
		$("body").attr('bgcolor', data);
	});
	$(document).ready(function(){
		$("#red").click(function(){
			socket.emit("ClientSendColor","red");
		});
		$("#blue").click(function(){
			socket.emit("ClientSendColor","blue");
		});
		$("#yellow").click(function(){
			socket.emit("ClientSendColor","yellow");
		});
	});
	</script>
	<style type="text/css">
		#red, #blue, #yellow{ width: 300px; height: 50px }
		#red{ background-color: red }
		#blue{ background-color: blue }
		#yellow{ background-color: yellow }
	</style>
</head>
<body bgcolor="pink">
	<div id="red"></div>
	<div id="blue"></div>
	<div id="yellow"></div>
</body>
</html>